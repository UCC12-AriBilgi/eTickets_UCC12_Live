@model eTickets.Models.Cinema

@{
    ViewData["Title"] = "Delete a Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h3>Delete confirmation for @Model.Name</h3>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="LogoPreview" class="border-info rounded-circle" style="max-width:150px;" />
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" readonly />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
                        <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index" style="display:none;">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
