@using eTickets.ViewModels

@model ShoppingCartVM

@{
    ViewData["Title"] = "Shopping Cart Summary";
}

@* 66 *@

<div class="row">
    <div class="col-md-8 offsett-2">
        <p>
            <h2>Your Shopping Card Summary</h2>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Selected Amount</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="align-middle">@item.Movie.Name</td>
                        <td class="align-middle">@item.Amount</td>
                        <td class="align-middle">@item.Movie.Price.ToString("c")</td>
                        <td class="align-middle">@((item.Amount * item.Movie.Price).ToString("c"))</td>
                        @* 70 *@
                        <td class="align-middle">
                            <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart" asp-route-id="@item.Movie.Id">
                                <i class="bi bi-cart-dash"></i>
                            </a>
                            |
                            <a class="text-success" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@item.Movie.Id">
                                <i class="bi bi-cart-plus"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>Total :</b></td>
                    <td><b>@Model.ShoppingCartTotal.ToString("c")</b></td>
                    <td>&nbsp;</td>
                </tr>
            </tfoot>
        </table>
        <div class="text-center">
            @* 73 *@
            <a class="btn btn-outline-primary" asp-action="CompleteOrder">Complete Order</a>
            &nbsp;&nbsp;
            <a class="btn btn-outline-success" asp-controller="Movies" asp-action="Index">
                Add more items
            </a>
        </div>
    </div>
</div>
